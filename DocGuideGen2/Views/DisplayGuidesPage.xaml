<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DocGuideGen2.Views.DisplayGuidesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:DocGuideGen2.ViewModels"
    Title="Exibir Guias"
    BackgroundColor="#1E1E1E">

    <ContentPage.BindingContext>
        <viewModels:DisplayGuidesViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <!--  Título  -->
        <Label
            FontSize="24"
            HorizontalOptions="Center"
            Text="Lista de Guias"
            TextColor="White" />

        <!--  Filtro  -->
        <Frame
            Padding="15"
            BackgroundColor="#D3D3D3"
            CornerRadius="10"
            HasShadow="True"
            HorizontalOptions="Center">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label
                    FontSize="16"
                    Text="Filtrar por:"
                    TextColor="Black" />

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <RadioButton
                        CheckedChanged="OnFilterChanged"
                        Content="Todos"
                        GroupName="GuideFilter"
                        IsChecked="True"
                        TextColor="Black" />
                    <RadioButton
                        CheckedChanged="OnFilterChanged"
                        Content="Guia"
                        GroupName="GuideFilter"
                        TextColor="Black" />
                    <RadioButton
                        CheckedChanged="OnFilterChanged"
                        Content="Assistente de Guia"
                        GroupName="GuideFilter"
                        TextColor="Black" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!--  Cabeçalho de Colunas  -->
        <Grid
            BackgroundColor="LightGray"
            ColumnSpacing="1"
            RowSpacing="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!--  Nome  -->
            <Border
                Grid.Column="0"
                BackgroundColor="#3A3A3A"
                Stroke="Transparent"
                StrokeThickness="1">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="Nome"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  Tipo  -->
            <Border
                Grid.Column="1"
                BackgroundColor="#3A3A3A"
                Stroke="Transparent"
                StrokeThickness="1">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="Tipo"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  Registro  -->
            <Border
                Grid.Column="2"
                BackgroundColor="#3A3A3A"
                Stroke="Transparent"
                StrokeThickness="1">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="Registro"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  RUT  -->
            <Border
                Grid.Column="3"
                BackgroundColor="#3A3A3A"
                Stroke="Transparent"
                StrokeThickness="1">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="RUT"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  Ações  -->
            <Border
                Grid.Column="4"
                BackgroundColor="#3A3A3A"
                Stroke="Transparent"
                StrokeThickness="1">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="Ações"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>
        </Grid>

        <!--  Lista de Guias  -->
        <CollectionView Margin="0,5,0,0" ItemsSource="{Binding Guides}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnSpacing="1" RowSpacing="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>

                        <!--  Nome  -->
                        <Border
                            Grid.Column="0"
                            BackgroundColor="#2D2D2D"
                            Stroke="Transparent"
                            StrokeThickness="0.5">
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="{Binding Name}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </Border>

                        <!--  Tipo  -->
                        <Border
                            Grid.Column="1"
                            BackgroundColor="#2D2D2D"
                            Stroke="Transparent"
                            StrokeThickness="0.5">
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="{Binding DisplayType}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </Border>

                        <!--  Registro  -->
                        <Border
                            Grid.Column="2"
                            BackgroundColor="#2D2D2D"
                            Stroke="Transparent"
                            StrokeThickness="0.5">
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="{Binding Registry}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </Border>

                        <!--  RUT  -->
                        <Border
                            Grid.Column="3"
                            BackgroundColor="#2D2D2D"
                            Stroke="Transparent"
                            StrokeThickness="0.5">
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="{Binding Rut}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </Border>

                        <!--  Ações com Emojis  -->
                        <Border
                            Grid.Column="4"
                            BackgroundColor="#2D2D2D"
                            HorizontalOptions="Center"
                            Stroke="Transparent"
                            StrokeThickness="0.5">
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                                <!--  Ícone de Edição (emoji de lápis) com clique  -->
                                <!--  Ícone de Edição (emoji de lápis) com clique  -->
                                <Label
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    Text="✏️">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}" CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>



                                <!--  Ícone de Exclusão (emoji de lixeira)  -->
                                <Label
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    Text="🗑️" />
                            </HorizontalStackLayout>
                        </Border>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
